<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', book: @book_new, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>User</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th>
              <%=image_tag user.get_profile_image(100,100) %>
            </th>
            <th></th>
            <th><%= link_to "Show", user_path(user.id) %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

